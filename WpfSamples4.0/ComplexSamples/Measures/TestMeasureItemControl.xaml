<UserControl x:Class="WpfSamples40.ComplexSamples.Measures.TestMeasureItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:measures="clr-namespace:WpfSamples40.ComplexSamples.Measures"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance measures:TestMeasureItemControl}">
    <Grid x:Name="LayoutRoot">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Температура" VerticalAlignment="Center"/>
            <measures:MeasureControl Margin="5" Width="100"
                                 MeasureContainer="{Binding TempMeasureContainer, Mode=TwoWay}"/>
        </StackPanel>
    </Grid>
</UserControl>
