<UserControl x:Class="WpfSamples40.ComplexSamples.Measures.TestMeasureControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:measures="clr-namespace:WpfSamples40.ComplexSamples.Measures"
             mc:Ignorable="d" 
             d:DesignWidth="400"
             d:DataContext="{d:DesignInstance measures:TestMeasureControl}">
    <Grid x:Name="LayoutRoot">
        <measures:TestMeasureItemControl 
            TempMeasureContainer="{Binding TempMeasureContainer}"/>
    </Grid>
</UserControl>
