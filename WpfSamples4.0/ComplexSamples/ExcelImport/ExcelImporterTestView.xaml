<Window x:Class="WpfSamples40.ComplexSamples.ExcelImport.ExcelImporterTestView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        Title="Тестирование импорта из Excel" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0" Margin="5" IsReadOnly="True"
                  ItemsSource="{Binding ExcelTable}" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5,5,10,5">
            <telerik:RadButton Content="Импорт" Width="90" Height="30"
                               Click="ImportButtonClick" />
        </StackPanel>
    </Grid>
</Window>