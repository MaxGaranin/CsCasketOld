<Window x:Class="WpfSamples40.View.ProgressBarView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:behaviors="clr-namespace:WpfSamples40.Behaviors"
        behaviors:WindowBehavior.HideCloseButton="True"
        Title="{Binding Title}" 
        Height="120" Width="300">
    
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ProgressBar Grid.Row="0" Height="20"
                     Minimum="{Binding Minimum}" 
                     Maximum="{Binding Maximum}" 
                     Value="{Binding Value}"/>  
        
        <TextBlock Grid.Row="0" Text="{Binding Value, StringFormat={}{0:0}%}"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
        
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center">
            <Button Height="25" Width="70" Margin="5"
                    Content="Отмена"
                    Command="{Binding CancelCommand}"
                    Click="CancelButton_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
