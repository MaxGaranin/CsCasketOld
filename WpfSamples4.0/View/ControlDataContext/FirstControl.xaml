<UserControl x:Class="WpfSamples40.View.ControlDataContext.FirstControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controlDataContext="clr-namespace:WpfSamples40.ViewModel.ControlDataContext"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="Teal"
             d:DataContext="{d:DesignInstance controlDataContext:FirstViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>        
        <TextBox Text="{Binding IntValue}" TextAlignment="Right"/>
    </Grid>
</UserControl>
