<Window x:Class="WpfSamples40.View.EditableComboboxView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModel="clr-namespace:WpfSamples40.ViewModel"
        Title="EditableComboboxView" Height="400" Width="600"
        DataContext="{DynamicResource ViewModel}">

    <Window.Resources>
        <viewModel:EditableComboBoxViewModel x:Key="ViewModel" />
    </Window.Resources>

    <Grid>
        <Label HorizontalAlignment="Left" VerticalAlignment="Top"
                   Margin="12,13,0,0" Width="62" Height="24">
            Student
        </Label>

        <ComboBox Height="25" Margin="80,12,12,0" VerticalAlignment="Top"
                      ItemsSource="{Binding Students}"
                      IsEditable="True" TextSearch.TextPath="StudentName">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding StudentName}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </Grid>
    
</Window>