<UserControl x:Class="WpfSamples40.Controls.TextBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="300" Height="30">
    <Grid Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Name="lblMyName" Grid.Column="0" Text="{Binding MyName}"></TextBlock>
        <TextBox Name="txtMyValue" Grid.Column="1">
            <TextBox.Text>
                <Binding x:Name="bindingMyValue" Path="MyDoubleValue"/>
            </TextBox.Text>
        </TextBox>
    </Grid>
</UserControl>
