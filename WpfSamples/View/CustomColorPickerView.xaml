<Window x:Class="WpfSamples40.View.CustomColorPickerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:common="clr-namespace:WpfSamples40.Controls.Common"
        Title="CustomColorPickerView" Height="450" Width="600">
    <Grid>
        <StackPanel>
            <common:ColorPicker x:Name="MyColorPicker" Margin="5" />
            <TextBlock Text="{Binding ElementName=MyColorPicker, Path=Color}"/>
        </StackPanel>
    </Grid>
</Window>
